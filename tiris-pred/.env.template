# Tiris Prediction Service Environment Configuration
# Copy this file to .env and update values

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=info
SERVICE_NAME=tiris-pred
SERVICE_VERSION=1.0.0

# Model Configuration
MODEL_PATH=/app/models
MODEL_VERSION=latest
PREDICTION_TIMEOUT=30
MAX_BATCH_SIZE=100
MODEL_CACHE_SIZE=1000

# Database Configuration (if using separate prediction DB)
PRED_DB_HOST=localhost
PRED_DB_PORT=5432
PRED_DB_NAME=tiris_predictions
PRED_DB_USER=pred_user
PRED_DB_PASSWORD=change_me_pred_db_password

# Main Database Connection (for accessing main app data)
DB_PASSWORD=change_me_main_db_password

# External Services
ML_API_KEY=change_me_ml_api_key
EXTERNAL_SERVICE_URL=https://api.external-ml-service.com
EXTERNAL_SERVICE_TIMEOUT=10

# Performance Settings
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=300

# Security
API_KEY_REQUIRED=true
INTERNAL_API_KEY=change_me_internal_api_key

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
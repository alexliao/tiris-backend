# Tiris Portal Environment Configuration
# Copy this file to .env and update values

# Application Settings
NODE_ENV=production
PORTAL_VERSION=1.0.0
LOG_LEVEL=info

# API Configuration
API_URL=https://backend.dev.tiris.ai
API_TIMEOUT=30000

# Authentication (if using frontend auth)
AUTH_ENABLED=true
SESSION_SECRET=change_me_portal_session_secret

# Feature Flags
FEATURE_PREDICTIONS=true
FEATURE_ANALYTICS=true
FEATURE_USER_MANAGEMENT=true

# UI Configuration
THEME=default
BRAND_NAME=Tiris Portal
SUPPORT_EMAIL=support@tiris.ai